<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DontStarve" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/active</item>
        <item name="colorOnPrimary">@color/active</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/acuminpro_regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/active</item>
        <item name="colorOnPrimary">@color/active</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/acuminpro_regular</item>
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>